<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/balance_rv_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_flat_black_24dp"
                android:drawablePadding="10dp"
                android:text="wingblock"
                android:textSize="@dimen/font_edit_add_more" />

            <TextView
                android:id="@+id/balance_rv_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:text="name"
                android:textSize="@dimen/font_edit_add_more" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/balance_rv_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:text="Deposit"
                android:textSize="@dimen/font_edit_add_more" />

            <TextView
                android:id="@+id/balance_rv_tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Paid Expense"
                android:textSize="@dimen/font_edit_add_more" />

            <TextView
                android:id="@+id/balance_rv_tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textSize="@dimen/font_edit_add_more" />


        </LinearLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>
