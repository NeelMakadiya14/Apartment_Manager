<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BalanceSheet"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/balance_tv8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:text="Total Expense "
                android:textSize="@dimen/font_edit_add_more"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Expense "
                android:textSize="@dimen/font_edit_add_more"
                android:id="@+id/balance_tv1"
                android:ems="10"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total blocks "
                android:textSize="@dimen/font_edit_add_more"
                android:id="@+id/balance_tv2"
                android:ems="10"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expense per Block"
                android:textSize="@dimen/font_edit_add_more"
                android:id="@+id/balance_tv3"
                android:ems="10"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Deposit by person "
                android:textSize="@dimen/font_edit_add_more"
                android:id="@+id/balance_tv6"
                android:ems="10"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extra/Common Income "
                android:textSize="@dimen/font_edit_add_more"
                android:id="@+id/balance_tv7"
                android:ems="10"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Deposit "
                android:textSize="@dimen/font_edit_add_more"
                android:id="@+id/balance_tv4"
                android:ems="10"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Balance"
                android:textSize="@dimen/font_edit_add_more"
                android:id="@+id/balance_tv5"
                android:ems="10"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/balance_rv"
        tools:listitem="@layout/balancesheet_rv"
        android:layout_marginTop="10dp"/>

</LinearLayout>